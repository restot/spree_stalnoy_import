
<% content_for :head do %>

<% end %>
<%= form_for [:admin, resource] do |f| %>
    <div class="row" data-hook="admin_stalnpy_imports_form_fields">
     <div class="col-md-2" data-hook="admin_stalnoy_imports_form">
        <div class="form-group">
          <%= f.label Spree.t(:name, scope: :yml_import) %>
          <%= f.text_field :name, class: 'form-control' %>
          <%= f.error_message_on :name %>
        </div>
      </div>


          <div class="col-md-4" data-hook="admin_stalnoy_imports_form">
            <div class="form-group">
              <%= f.label Spree.t(:link, scope: :yml_import) %>
              <%= f.text_field :link, class: 'form-control' %>
              <%= f.error_message_on :link %>
            </div>
          </div>
      <div class="col-md-4" data-hook="admin_stalnoy_imports_form">
        <div class="form-group">
          <%= f.label Spree.t(:cron, scope: :yml_import) %>
          <%= f.text_field :cron, class: 'form-control' %>
          <%= f.error_message_on :cron %>
        </div>
      </div>

      <div class="col-md-1" data-hook="admin_stalnoy_imports_form">
        <div class="form-group">
          <%= f.label Spree.t(:update_price, scope: :yml_import) %>
          <%= f.check_box :update_price, class: 'form-control' %>
          <%= f.error_message_on :update_price %>
        </div>
      </div>

      <div class="col-md-1" data-hook="admin_stalnoy_imports_form">
        <div class="form-group">
          <%= f.label Spree.t(:update_available, scope: :yml_import) %>
          <%= f.check_box :update_available, class: 'form-control' %>
          <%= f.error_message_on :update_available %>
        </div>
      </div>

    </div>



    <%= render "spree/admin/shared/#{resource.new_record? ? 'new' : 'edit'}_resource_links" %>
<% end %>


